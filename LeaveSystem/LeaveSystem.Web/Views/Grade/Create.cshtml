@using LeaveSystem.Web.Models
@model LeaveSystem.Web.ViewModels.GradeCreateViewModel
@{
    ViewBag.Title = "添加专业";
    List<Grade> grades = ViewBag.Grades;
}

<div class="container ex-container">
    <div class="row">
        <div class="col-md-7">
            <div class="panel panel-default ex-card">
                <div class="panel-heading ex-card-header">
                    <h3>添加专业</h3>
                </div>
                <div class="panel-body ex-card-body">
                    @Html.ValidationSummary()
                    @using (Html.BeginForm("Create", "Grade", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.GradeNumber, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.GradeNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success">保存</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="panel panel-default ex-card">
                <div class="panel-heading ex-card-header">
                    <h3>现有的年级</h3>
                </div>
                <div class="panel-body ex-card-body">
                    <div class="list-group">
                        @if (grades != null && grades.Any())
                        {
                            foreach (var grade in grades)
                            {
                                <a class="list-group-item list-group-item-heading">@grade.GradeNum</a>
                            }
                        }
                        else
                        {
                            <a class="list-group-item">暂无数据</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using LeaveSystem.Web.Models
@model LeaveSystem.Web.ViewModels.RoleCreateViewModel
@{
    ViewBag.Title = "创建角色";
}

@using (Html.BeginForm())
{
    <div class="ex-page-header">
        <div class="container">
            <div class="ex-page-topbar">
                <div class="ex-page-titlebar hidden-xs">
                    <h1 class="pull-left">创建角色</h1>
                    <span>角色创建后不能更改名称</span>
                    <span class="pull-right">
                        <button type="submit" class="btn btn-success">确认创建</button>
                        @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
                    </span>
                </div>
                <div class="ex-page-titlebar visible-xs">
                    <h1 class="pull-left">创建角色</h1>
                    <span class="pull-right">
                        <button type="submit" class="btn btn-success">确认创建</button>
                        @Html.ActionLink("取消", "Index", null, new { @class = "btn btn-default" })
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="container ex-container">
        @Html.ValidationSummary(false)
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default ex-card">
                    <div class="panel-heading ex-card-header">
                        <h3>填写角色信息</h3>
                    </div>
                    <div class="panel-body ex-card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", autocomplete = "off" })
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default ex-card">
                    <div class="panel-heading ex-card-header">
                        <h3>添加用户到此角色</h3>
                    </div>
                    <div class="panel-body ex-card-body">
                        <div class="list-group">
                            @if (Model != null && Model.Users != null && Model.Users.Any())
                            {
                                foreach (User user in Model.Users)
                                {
                                    <a class="list-group-item">
                                        <label class="checkbox-inline" title="@user.Id">
                                            <input type="checkbox" name="UserIdsToAdd" value="@user.Id" />
                                            <span class="list-group-item-heading">@user.Name</span>&nbsp;
                                            <span class="list-group-item-text text-muted">号码:@user.UserName</span>
                                        </label>
                                    </a>
                                }
                            }
                            else
                            {
                                <a class="list-group-item">
                                    <span class="list-group-item-heading">暂无</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@model LeaveSystem.Web.Models.LeaveConfig
@{
    ViewBag.Title = "请假配置";
}

<div class="container ex-container">
    <div class="panel panel-default ex-card">
        <div class="panel-heading ex-card-header">
            <h3>请假配置<a class="btn btn-default pull-right" href="@Url.Action("Edit")">编辑</a></h3>
        </div>
        <div class="panel-body ex-card-body">
            <form class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(e => e.LeastDayToSign, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.LeastDayToSign, new { @class = "form-control", @readonly="" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.LeastResumeDay, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.LeastResumeDay, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.LeastSickLeaveDay, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.LeastSickLeaveDay, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.MaxLeaveClassInOneMonth, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.MaxLeaveClassInOneMonth, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.MaxLeaveDayInOneMonth, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.MaxLeaveDayInOneMonth, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.MaxLeaveTimeInOneMonth, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.MaxLeaveTimeInOneMonth, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.ResumeClassroom, new {@class = "control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.ResumeClassroom, new {@class = "form-control", @readonly = ""})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.ResumeTeacher, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.ResumeTeacher.Teacher.Name, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(e => e.ClerkTeacher, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(e => e.ClerkTeacher.Teacher.Name, new { @class = "form-control", @readonly = "" })
                    </div>
                </div>
           </form>
        </div>
    </div>
</div>

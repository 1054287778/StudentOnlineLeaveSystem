@using LeaveSystem.Web.Models
@model LeaveSystem.Web.ViewModels.DepartmentCreateViewModel
@{
    ViewBag.Title = "添加学院";
    List<Department> departments = ViewBag.Departments;
}

<div class="container ex-container">
    <div class="row">
        <div class="col-md-7">
            <div class="panel panel-default ex-card">
                <div class="panel-heading ex-card-header">
                    <h3>添加学院</h3>
                </div>
                <div class="panel-body ex-card-body">
                    @Html.ValidationSummary()
                    @using (Html.BeginForm("Create", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success">保存</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="panel panel-default ex-card">
                <div class="panel-heading ex-card-header">
                    <h3>现有的学院</h3>
                </div>
                <div class="panel-body ex-card-body">
                    <div class="list-group">
                        @if (departments != null && departments.Any())
                        {
                            foreach (var department in departments)
                            {
                                <a class="list-group-item">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" name="IdsToAdd" value="@department.Id" />
                                        <span class="list-group-item-heading">@department.Name</span>
                                        <span class="list-group-item-text text-muted">@department.Id</span>
                                    </label>
                                </a>
                            }
                        }
                        else
                        {
                            <a class="list-group-item">暂无数据</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@using LeaveSystem.Web.Models
@model LeaveSystem.Web.ViewModels.DepartmentEditViewModel
@{
    ViewBag.Title = "编辑学院信息";
    List<Major> inMajors = ViewBag.InMajors;
    List<Major> outMajors = ViewBag.OutMajors;
}
@using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="container ex-container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default ex-card">
                    <div class="panel-heading ex-card-header">
                        <h3>编辑基本信息</h3>
                    </div>
                    <div class="panel-body ex-card-body">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-success">保存</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default ex-card">
                    <div class="panel-heading ex-card-header">
                        <h3>添加专业</h3>
                    </div>
                    <div class="panel-body ex-card-body">
                        <div class="list-group">
                            @if (outMajors != null && outMajors.Any())
                            {
                                foreach (var major in outMajors)
                                {
                                    <a class="list-group-item">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" name="IdsToAdd" value="@major.Id" />
                                            @major.Name
                                        </label>
                                    </a>
                                }
                            }
                            else
                            {
                                <a class="list-group-item">暂无数据</a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default ex-card">
                    <div class="panel-heading ex-card-header">
                        <h3>移除专业</h3>
                    </div>
                    <div class="panel-body ex-card-body">
                        <div class="list-group">
                            @if (inMajors != null && inMajors.Any())
                            {
                                foreach (var major in inMajors)
                                {
                                    <a class="list-group-item">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" name="IdsToRemove" value="@major.Id" />
                                            @major.Name
                                        </label>
                                    </a>
                                }
                            }
                            else
                            {
                                <a class="list-group-item">暂无数据</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

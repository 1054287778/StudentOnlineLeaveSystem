@model LeaveSystem.Web.Models.User
@{
    ViewBag.Title = "管理";

}

<div class="container ex-container">
    <div class="row">
        <div class="col-md-5">
            @Html.Partial("_HomeLeftPartial")
        </div>
        <div class="col-md-7">
            <div class="panel panel-default ex-card">
                <div class="panel-heading ex-card-header">
                    <h2>个人设置</h2>
                </div>
                <div class="ex-card-body ex-card-box-lg">
                    @using (Html.BeginForm("Profiles", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(e=>e.Id)
                        <div class="alert-success">
                            @ViewBag.Message
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.UserName, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-8">
                                <p class="form-control-static">@Html.DisplayFor(e => e.UserName)</p>
                                @Html.HiddenFor(e=>e.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.Name, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-8">
                                <p class="form-control-static">@Html.DisplayFor(e => e.Name)</p>
                                @Html.HiddenFor(e => e.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(e => e.PhoneNumber, new { @class = "col-xs-3 control-label" })
                            <div class="col-xs-8">
                                @Html.TextBoxFor(e => e.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        if (Model.StudentInfo != null && Model.TeacherInfo == null)
                        {
                            //学生
                            <div class="form-group">
                                @Html.LabelFor(e => e.StudentInfo.Dormitory, new { @class = "col-xs-3 control-label" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(e => e.StudentInfo.Dormitory, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(e => e.StudentInfo.HomeAddress, new { @class = "col-xs-3 control-label" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(e => e.StudentInfo.HomeAddress, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(e => e.StudentInfo.PersonalTel, new { @class = "col-xs-3 control-label" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(e => e.StudentInfo.PersonalTel, new { @class = "form-control" })
                                </div>
                            </div>

                        }
                        else if (Model.StudentInfo == null && Model.TeacherInfo != null)
                        {
                            <div class="form-group">
                                @Html.LabelFor(e => e.TeacherInfo.OfficeNum, new { @class = "col-xs-3 control-label" })
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(e => e.TeacherInfo.OfficeNum, new { @class = "form-control" })
                                </div>
                            </div>
                        }

                        <div class="form-group">
                            <label class="col-xs-3 control-label"></label>
                            <div class="col-xs-9">
                                <button type="submit" name="submit" class="btn btn-success" data-loading-text="正在提交...">保 存</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
